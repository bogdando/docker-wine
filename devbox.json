{
  "builders": [{
    "type": "docker",
    "image": "bogdando/devbox:v0.1",
    "commit": true,
    "run_command": [
      "-tid",
      "--privileged",
      "-v",
      "/dev:/dev",
      "-v",
      "/run:/run",
      "-v",
      "/lib/modules:/lib/modules:ro",
      "-v",
      "/sys/fs/cgroup:/sys/fs/cgroup",
      "-v",
      "/var/lib/libvirt:/var/lib/libvirt",
      "{{.Image}}",
      "/bin/bash"
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "{{.Vars}} sh '{{.Path}}'",
    "scripts": [
      "script/update.sh",
      "script/minimize.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "only": ["docker"],
        "repository": "bogdando/devbox",
        "tag": "latest",
        "keep_input_artifact": false
      }
    ]
  ]
}
